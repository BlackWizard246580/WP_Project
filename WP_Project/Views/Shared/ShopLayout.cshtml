@{
    int cartItemCount = (Session["cartItemCount"] != null) ? (int)Session["cartItemCount"] : 0;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="icon" href="~/img/core-img/favicon.ico">

    <title>@ViewBag.Title | Andy's - Food Ordering Ecommerce</title>

    <link href="~/Content/core-style.css" rel="stylesheet" />
    <link href="~/Content/landing-page.min.css" rel="stylesheet" />

    <link href="~/Content/animate.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />*@
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/Content/business-frontpage.css" rel="stylesheet" />
    <link href="~/Content/classy-nav.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/landing-page.css" rel="stylesheet" />
    <link href="~/Content/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/nice-select.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/simple-line-icons.css" rel="stylesheet" />
 
    

    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("style", required: false)

</head>
<body style="margin:0;padding:0;font-family:helveticaneuemedium;font-size: 16px;">
    <!-- Search Wrapper Area Start -->
    <div class="search-wrapper section-padding-100">
        <div class="search-close">
            <i class="fa fa-close" aria-hidden="true"></i>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="search-content">
                    @using (Html.BeginForm("PagerTest", "Item", FormMethod.Get))
                    {
                        <form action="#" method="get">
                            @*<input type="search" name="search" id="search" placeholder="Type your keyword...">*@
                            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                            <button type="submit" value="Search"><img src="~/img/core-img/search.png" alt=""></button>
                        </form>
                    }
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <!-- Search Wrapper Area End -->
    <!-- ##### Main Content Wrapper Start ##### -->
    <div class="main-content-wrapper d-flex clearfix">

        <!-- Mobile Nav (max width 767px)-->
        <div class="mobile-nav">
            <!-- Navbar Brand -->
            <div class="amado-navbar-brand">
                <a href="@Url.Action("Index", "LayoutTest")"><img src="~/img/core-img/logo.png" alt=""></a>
            </div>
            <!-- Navbar Toggler -->
            <div class="amado-navbar-toggler">
                <span></span><span></span><span></span>
            </div>
        </div>

        <!-- Header Area Start -->
        <header class="header-area clearfix">
            <!-- Close Icon -->
            <div class="nav-close">
                <i class="fa fa-close" aria-hidden="true"></i>
            </div>
            <!-- Logo -->
            <div class="logo">
                <a href="@Url.Action("Index", "LayoutTest")"><img src="~/img/core-img/logo.png" alt=""></a>
            </div>
            <!-- Amado Nav -->
            <nav class="amado-nav">
                <ul>
                    @{ string stractive = "active";}
                    <li class="@if (ViewBag.Title == "Index") { @stractive}"><a href="@Url.Action("Index", "LayoutTest")">Home</a></li>
                    <li class="@if (ViewBag.Title == "PagerTest") { @stractive}"><a href="@Url.Action("PagerTest", "Item")">Shop</a></li>
                    @*<li class="@if (ViewBag.Title == "ProductDetails") { @stractive}"><a href="@Url.Action("ProductDetails", "LayoutTest")">Product</a></li>*@
                    <li class="@if (ViewBag.Title == "Cart") { @stractive}"><a href="@Url.Action("Index", "Cart")">Cart</a></li>
                    <li class="@if (ViewBag.Title == "Checkout") { @stractive}"><a href="@Url.Action("CheckAmount", "Cart")">Checkout</a></li>
                </ul>
            </nav>
            <!-- Button Group -->
            <div class="amado-btn-group mt-30 mb-100">
                <a href="#" class="btn amado-btn mb-15" style="display: block;font-size: 16px;vertical-align: middle;line-height: if;">
                    %Discount% @*@Session["LoginUserEmail"]*@
                </a>
            </div>
            <!-- Cart Menu -->
            <div class="cart-fav-search mb-100">
                <a href="@Url.Action("Index", "Cart")" class="cart-nav"><img src="~/img/core-img/cart.png" alt=""> Cart <span id="cartitemcount">(@cartItemCount)</span></a>
                <a href="#" class="search-nav"><img src="~/img/core-img/search.png" alt=""> Search</a>
            </div>
            <!-- Social Button -->
            <div class="social-info d-flex justify-content-between">
                <a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            </div>
        </header>
        <!-- Header Area End -->

        @RenderBody()
    </div>
    <!-- ##### Main Content Wrapper End ##### -->

    @if (ViewBag.Title == "Index")
    {
        @Html.Partial("IndexSection")
    }

    <!-- ##### Footer Area Start ##### -->
    <footer class="footer_area clearfix">
        <div class="container">
            <div class="row align-items-center">
                <!-- Single Widget Area -->
                <div class="col-12 col-lg-4">
                    <div class="single_widget_area">
                        <!-- Logo -->
                        <div class="footer-logo mr-50">
                            <a href="@Url.Action("Index", "LayoutTest")"><img src="~/img/core-img/logo2.png" alt=""></a>
                        </div>
                        <!-- Copywrite Text -->
                        <p class="copywrite">
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved. <br> This web app is built with <i class="fa fa-heart-o" aria-hidden="true"></i> by Andy
                    </div>
                </div>
                <!-- Single Widget Area -->
                <div class="col-12 col-lg-8">
                    <div class="single_widget_area">
                        <!-- Footer Menu -->
                        <div class="footer_menu">
                            <nav class="navbar navbar-expand-lg justify-content-end">
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#footerNavContent" aria-controls="footerNavContent" aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars"></i></button>
                                <div class="collapse navbar-collapse" id="footerNavContent">
                                    <ul class="navbar-nav ml-auto">
                                        <li class="nav-item active">
                                            <a class="nav-link" href="@Url.Action("Index", "LayoutTest")">Home</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="@Url.Action("GetItems", "Category")">Shop</a>
                                        </li>
                                        @*<li class="nav-item">
                                            <a class="nav-link" href="@Url.Action("ProductDetails", "LayoutTest")">Product</a>
                                        </li>*@
                                        <li class="nav-item">
                                            <a class="nav-link" href="@Url.Action("Index", "Cart")">Cart</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="@Url.Action("CheckAmount", "Cart")">Checkout</a>
                                        </li>
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- ##### Footer Area End ##### -->

    <script src="~/Scripts/jquery/jquery-2.2.4.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins.js"></script>
    <script src="~/Scripts/active.js"></script>
    <script src="~/Scripts/map-active.js"></script>
    <script src="~/Scripts/classy-nav.min.js"></script>

    @*@Scripts.Render("~/bundles/jquery")*@
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
